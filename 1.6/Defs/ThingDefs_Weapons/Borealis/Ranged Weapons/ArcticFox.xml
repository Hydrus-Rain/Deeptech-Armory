<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Arctic Fox -->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>DTA_ArcticFox</defName>
		<label>"Arctic Fox" Carbine</label>
		<description>A small Carbine designed for use in Sub-Zero Temperatures, Comes with a Built in Flash Guard.</description>
		<graphicData>
		<texPath>Things/Borealis/Weapons/Ranged/ArcticFox</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.4,1.4</drawSize>
		</graphicData>
		<uiIconScale>1.0</uiIconScale>
		<soundInteract>Interact_SMG</soundInteract>
		<recipeMaker>
	<recipeUsers><li>DTA_BorealBench</li></recipeUsers>
      <researchPrerequisite>Borealis</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>11000</WorkToMake>
			<Mass>1.1</Mass>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.79</AccuracyMedium>
			<AccuracyLong>0.62</AccuracyLong>
			<RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>25</Plasteel>
			<Steel>55</Steel>
			<ComponentIndustrial>7</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DTA_ArcticFoxRounds</defaultProjectile>
				<warmupTime>0.5</warmupTime>
				<range>19.9</range>
				<burstShotCount>5</burstShotCount>
				<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
				<soundCast>Shot_MachinePistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>DTA_ArcticFoxRounds</defName>
		<label>ArcticFoxRounds</label>
		<graphicData>
		<drawSize>1.5,1.5</drawSize>
		<texPath>Things/Borealis/Weapons/Projectiles/CR</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>18</damageAmountBase>
			<speed>55</speed>
		</projectile>
	</ThingDef>
</Defs>
