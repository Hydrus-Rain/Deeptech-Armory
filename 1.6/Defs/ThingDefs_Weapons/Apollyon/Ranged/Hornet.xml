<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Hornet -->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>DTA_Hornet</defName>
		<label>"Hornet" Assault Rifle</label>
		<description>A strange Assault rifle with a self regenerating corrosive mechanite swarm, acting as both the ammo fabricator and corrosive round infuser.</description>
		<graphicData>
		<texPath>Things/Apollyon/Weapons/Ranged/Hornet</texPath>
			<graphicClass>Graphic_Single</graphicClass>	
			<drawSize>1.4,1.4</drawSize>
		</graphicData>
		<uiIconScale>1.0</uiIconScale>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
	<recipeUsers><li>DTA_ApollyonBench</li></recipeUsers>
      <researchPrerequisite>Apollyon</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>1.1</Mass>
			<AccuracyTouch>0.5</AccuracyTouch>
			<AccuracyShort>0.8</AccuracyShort>
			<AccuracyMedium>0.9</AccuracyMedium>
			<AccuracyLong>0.8</AccuracyLong>
			<RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>15</Plasteel>
			<Steel>156</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DTA_HornetRounds</defaultProjectile>
				<warmupTime>0.35</warmupTime>
				<range>21.1</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		<li>
        <label>Fangpoint</label>
        <capacities>
			<li>Cut</li>
			<li>Stab</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>DTA_HornetRounds</defName>
		<label>Hornet Rounds</label>
		<graphicData>
		<drawSize>1.5,1.5</drawSize>
		<texPath>Things/Apollyon/Weapons/Projectiles/p2</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
 <projectile>
	<damageDef>DTA_RapidMechaniteCorrosion</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <stoppingPower>1.9</stoppingPower>
      <speed>75</speed>
    </projectile>
	</ThingDef>
</Defs>
