<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--Battle Rifle-->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Deeptech_BattleRifle</defName>
		<label>BR21"Pulse"</label>
		<description>A Battle Rifle that came to be due to increasing need for adaptable high caliber solutions. Usually used by infantry or dedicated marksmen.</description>
		<graphicData>
			<texPath>Things/Deeptech/Weapons/Ranged/Battlerifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
		</graphicData>
		<uiIconScale>1.0</uiIconScale>
		<soundInteract>Interact_Rifle</soundInteract>
		<recipeMaker>
			<recipeUsers>
				<li>DTA_SynthBench</li>
			</recipeUsers>
      <researchPrerequisites>
        <li>StandardizedArms</li>
        <li>PrecisionRifling</li>
      </researchPrerequisites>
	  <skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>11500</WorkToMake>
			<Mass>3.5</Mass>
			<AccuracyTouch>0.60</AccuracyTouch>
			<AccuracyShort>0.68</AccuracyShort>
			<AccuracyMedium>0.89</AccuracyMedium>
			<AccuracyLong>0.85</AccuracyLong>
			<RangedWeapon_Cooldown>0.27</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>30</Plasteel>
			<Uranium>10</Uranium>
			<Steel>350</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
			<ComponentSpacer>3</ComponentSpacer>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DTA_BR21_Bullet</defaultProjectile>
				<warmupTime>1.5</warmupTime>
				<range>30.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<soundCast>Shot_AssaultRifle</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>DTA_BR21_Bullet</defName>
		<label>deeptech battle rifle bullet</label>
		<graphicData>
			<texPath>Things/Deeptech/Weapons/Projectiles/BulletRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>11</damageAmountBase>
			<speed>70</speed>
		</projectile>
	</ThingDef>
</Defs>
